@model IEnumerable<ASPProject.Models.Home.Item>
@using ASPProject.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Items/_Layout.cshtml";
}

<div class="header">
    <div class="container">
        <div class="logo">
            <h1><a href="index.html"><b>S<br>U<br>P<br>E<br>R</b>TexWorld<span>The Best Supermarket</span></a></h1>
        </div>
        <div class="head-t">
            <ul class="card">
                <li class="fa fa-heart">@Html.ActionLink("Cart", "Index", "Orders")</li>
                <li class="fa fa-heart">@Html.ActionLink("Login", "Login", "Login")</li>
                <li class="fa fa-heart">@Html.ActionLink("Register", "Create", "Users")</li>
                <li class="fa fa-heart">@Html.ActionLink("Orders", "Index", "Orders")</li>
            </ul>
        </div>
    </div>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>



<div class="grid-container">
    @foreach (var item in Model)
    {
        <div class="grid-item">
            <div class='col-md-3 m-wthree'>
                <div class='col-m'>
                    @Html.ShowItem(item)
                    <div class="item-actions">
                        <p class='button'>
                            @Html.ActionLink("Add To Cart", "ToCart", new { itemId = item.Id, userId = 1})
                        </p>
                        <p class='button'>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </p>
                        @if (this.User.IsInRole("Admin"))
                        {
                            <p class=''>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </p>
                            <p class=''>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

